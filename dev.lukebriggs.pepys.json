{
  "app-id": "dev.lukebriggs.pepys",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "20.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "runner.sh",
  "modules": [
    {
      "name": "Pepys",
      "buildsystem": "simple",
      "build-commands": [
        "cp -r dist/Pepys/ /app/ ",
        "install -D runner.sh /app/bin/runner.sh"
      ],
      "sources": [
        {
          "type": "file",
          "path": "flatpak_scripts/runner.sh"
        },
        {
          "type": "dir",
          "path": "dist/Pepys/",
          "dest": "dist/Pepys/"
        }
      ]
    }
  ]
}